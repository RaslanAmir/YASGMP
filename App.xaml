<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="YasGMP.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!--
    App-level resources. We merge the YASTECH theme first so its keys are available project-wide.
    Keep this file minimal â€” app-level styles only.
  -->
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- YASTECH theme (ensure the file is copied to project under Resources/Styles or similar) -->
        <ResourceDictionary Source="Resources/Theme.YASTECH.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Optional: cross-cutting app styles or converters can live here -->
    </ResourceDictionary>
  </Application.Resources>
</Application>
