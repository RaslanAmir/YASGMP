<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="YasGMP.Views.ComponentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maui="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:vm="clr-namespace:YasGMP.ViewModels"
    xmlns:models="clr-namespace:YasGMP.Models;assembly=YasGMP.AppCore"
    x:DataType="vm:ComponentViewModel"
    Title="Komponente strojeva – YasGMP">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="📤 Export"
                 Order="Primary"
                 Priority="0"
                 Clicked="OnExportComponentsClicked" />
  </ContentPage.ToolbarItems>

  <ContentPage.Content>
    <VerticalStackLayout Padding="28,20,28,20" Spacing="18"
                         BackgroundColor="{StaticResource YtSurface}">
      <Border Background="{StaticResource YtSurfaceCard}" Padding="20" Stroke="{StaticResource YtRowBorder}" StrokeThickness="1">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="14" />
        </Border.StrokeShape>
        <Border.Shadow>
          <Shadow />
        </Border.Shadow>

        <VerticalStackLayout Spacing="16">
          <Label Text="Pregled strojnih komponenti"
                 FontSize="22" FontAttributes="Bold"
                 TextColor="{StaticResource YtPrimary700}"
                 HorizontalOptions="Center"/>

          <HorizontalStackLayout Spacing="14">
            <Button Text="➕ Dodaj novu komponentu"
                    Clicked="OnAddComponentClicked"
                    BackgroundColor="{StaticResource YtPrimary600}"
                    TextColor="White"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Unos nove komponente." />
            <Button Text="✏️ Uredi"
                    Clicked="OnEditComponentClicked"
                    BackgroundColor="{StaticResource YtAccent50}"
                    TextColor="{StaticResource YtAccent700}"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Uređivanje odabrane komponente." />
            <Button Text="🗑️ Briši"
                    Clicked="OnDeleteComponentClicked"
                    BackgroundColor="{StaticResource YtDanger700}"
                    TextColor="White"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Soft-delete odabrane komponente." />
          </HorizontalStackLayout>

          <CollectionView x:Name="ComponentListView"
                          ItemsSource="{Binding FilteredComponents}"
                          SelectedItem="{Binding SelectedComponent, Mode=TwoWay}"
                          SelectionMode="Single"
                          HeightRequest="440"
                          BackgroundColor="{StaticResource YtSurface}">
            <CollectionView.ItemTemplate>
              <DataTemplate x:DataType="models:MachineComponent">
                <Border Margin="0,2,0,2" Padding="10" Background="{StaticResource YtSurface}" Stroke="{StaticResource YtRowBorder}" StrokeThickness="1">
                  <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                  </Border.StrokeShape>
                  <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding Name}" FontSize="17" FontAttributes="Bold" TextColor="{StaticResource YtOnSurface}" />
                    <Label Text="{Binding Code}" FontSize="13" TextColor="{StaticResource YtOnSurfaceDim}"
                           maui:ToolTipProperties.Text="Interna oznaka komponente" />
                    <Label Text="{Binding MachineId, StringFormat='Stroj ID: {0}'}" FontSize="12" TextColor="{StaticResource YtOnSurfaceDim}" />
                    <Label Text="{Binding Type}" FontSize="13" TextColor="{StaticResource YtOnSurface}" />
                    <Label Text="{Binding InstallDate, StringFormat='Instalacija: {0:yyyy-MM-dd}'}"
                           FontSize="12" TextColor="{StaticResource YtOnSurfaceDim}" />
                    <Label Text="{Binding Status}" FontSize="12" TextColor="{StaticResource YtAccent700}"
                           maui:ToolTipProperties.Text="Status (active/maintenance/removed)" />
                    <Label Text="{Binding SopDoc}" FontSize="12" TextColor="{StaticResource YtOnSurfaceDim}"
                           maui:ToolTipProperties.Text="SOP/URS dokument (putanja)" />
                    <HorizontalStackLayout Spacing="8">
                      <Border Padding="6,2" Background="{StaticResource YtPrimary50}">
                        <Border.StrokeShape>
                          <RoundRectangle CornerRadius="6" />
                        </Border.StrokeShape>
                        <Label Text="{Binding DocumentsCount, StringFormat='Dokumenti: {0}'}" FontSize="11" TextColor="{StaticResource YtPrimary700}"/>
                      </Border>
                      <Button Text="Dokumenti" Clicked="OnOpenDocsClicked" />
                    </HorizontalStackLayout>
                  </VerticalStackLayout>
                </Border>
              </DataTemplate>
            </CollectionView.ItemTemplate>
          </CollectionView>

          <Label Text="Kliknite na redak za odabir komponente. Moguće je uređivati ili brisati samo odabranu komponentu."
                 FontSize="12" TextColor="{StaticResource YtOnSurfaceDim}" HorizontalOptions="Center"/>
        </VerticalStackLayout>

      </Border>
    </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>
