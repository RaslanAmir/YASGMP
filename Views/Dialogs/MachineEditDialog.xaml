<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YasGMP.Views.Dialogs.MachineEditDialog"
             Title="Stroj">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Entry Text="{Binding Name}" Placeholder="Naziv stroja" />
            <Entry Text="{Binding SerialNumber}" Placeholder="Serijski broj" />
            <Picker x:Name="TypePicker" Title="Tip" SelectedIndexChanged="OnTypeChanged" ItemDisplayBinding="{Binding Name}" />
            <Picker x:Name="ManufacturerPicker" Title="Proizvođač" SelectedIndexChanged="OnManufacturerChanged" ItemDisplayBinding="{Binding Name}" />
            <Picker x:Name="LocationPicker" Title="Lokacija" SelectedIndexChanged="OnLocationChanged" ItemDisplayBinding="{Binding Name}" />
            <Picker x:Name="ResponsiblePicker" Title="Odgovorna osoba" SelectedIndexChanged="OnResponsibleChanged" ItemDisplayBinding="{Binding Name}" />
            <Picker x:Name="StatusPicker" Title="Status" SelectedIndexChanged="OnStatusChanged" ItemDisplayBinding="{Binding Name}" />
            <DatePicker Date="{Binding InstallDate}" />
            <Button Text="Dodaj dokument" Clicked="OnPickDocumentClicked" />
            <Button Text="Preuzmi QR" Clicked="OnOpenQrClicked" />
            <HorizontalStackLayout Spacing="16" Margin="0,20,0,0">
                <Button Text="Spremi" Clicked="OnSaveClicked" />
                <Button Text="Odustani" Clicked="OnCancelClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
