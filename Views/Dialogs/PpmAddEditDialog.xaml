<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:YasGMP.Pages"
    x:Class="YasGMP.Views.PpmAddEditDialog"
    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type pages:PpmPage}}, Path=BindingContext.IsEditDialogOpen, Mode=TwoWay}">

    <Frame Padding="18" Margin="30" BackgroundColor="White" BorderColor="#2962ff" CornerRadius="14" HasShadow="True">
        <VerticalStackLayout Spacing="12">
            <Label Text="Plan održavanja" FontSize="22" FontAttributes="Bold"/>
            <Entry Text="{Binding EditDialogPlan.Title}" Placeholder="Naslov plana" />
            <Editor Text="{Binding EditDialogPlan.Description}" Placeholder="Opis" AutoSize="TextChanges"/>
            <Entry Text="{Binding EditDialogPlan.Frequency}" Placeholder="Učestalost (mjesečno, kvartalno...)" />
            <DatePicker Date="{Binding EditDialogPlan.DueDate}" Format="dd.MM.yyyy" />
            <!-- More fields as needed -->
            <Label Text="{Binding EditDialogValidationError}" TextColor="Red" FontSize="13"/>
            <HorizontalStackLayout Spacing="10">
                <Button Text="Spremi" Command="{Binding SaveDialogPlanAsync}" />
                <Button Text="Odustani" Command="{Binding CancelDialogEdit}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
