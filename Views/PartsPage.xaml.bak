<?xml version="1.0" encoding="utf-8" ?>
<!--
  File: Views/PartsPage.xaml
  Purpose: YASTECH-themed UI for Parts inventory (MySQL-backed).
  Notes:
    - Namespace aligned to YasGMP.Views (matches AppShell.xaml usage).
    - Tooltips use MAUI ToolTipProperties (no external 'YasGMP.UI' namespace).
    - Colors/styles use Theme.YASTECH resources.
-->
<ContentPage 
    x:Class="YasGMP.Views.PartsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maui="http://schemas.microsoft.com/dotnet/2021/maui"
    Title="Rezervni dijelovi – YasGMP">

  <ContentPage.Content>
    <VerticalStackLayout Padding="28,20,28,20" Spacing="18" BackgroundColor="{StaticResource YtSurface}">
      <Frame BackgroundColor="{StaticResource YtSurfaceCard}"
             CornerRadius="14"
             HasShadow="True"
             Padding="20"
             BorderColor="{StaticResource YtRowBorder}">

        <VerticalStackLayout Spacing="16">
          <Label Text="Pregled svih rezervnih dijelova"
                 FontSize="22"
                 FontAttributes="Bold"
                 TextColor="{StaticResource YtPrimary700}"
                 HorizontalOptions="Center"/>

          <!-- Filters and actions -->
          <Frame Padding="12" CornerRadius="10" BackgroundColor="{StaticResource YtSurface}" BorderColor="{StaticResource YtRowBorder}">
            <VerticalStackLayout Spacing="10">
              <HorizontalStackLayout Spacing="10">
                <SearchBar x:Name="SearchBar"
                           Placeholder="Pretraži (šifra/naziv/dobavljač)"
                           TextChanged="OnSearchTextChanged"
                           WidthRequest="420" />
                <CheckBox x:Name="LowStockOnly" CheckedChanged="OnLowStockOnlyChanged"/>
                <Label Text="Samo 'Low stock'" VerticalOptions="Center"/>
                <Button Text="Export XLSX" Clicked="OnExportClicked"
                        BackgroundColor="{StaticResource YtPrimary50}" TextColor="{StaticResource YtPrimary700}" />
              </HorizontalStackLayout>
              <HorizontalStackLayout Spacing="10">
                <Label Text="Dobavljač:" VerticalOptions="Center"/>
                <Picker x:Name="SupplierFilterPicker" WidthRequest="220" SelectedIndexChanged="OnSupplierFilterChanged" />
                <Label Text="Lokacija:" VerticalOptions="Center"/>
                <Picker x:Name="LocationFilterPicker" WidthRequest="220" SelectedIndexChanged="OnLocationFilterChanged" />
              </HorizontalStackLayout>
              <HorizontalStackLayout Spacing="10">
                <Button Text="+ Povećaj zalihu" Clicked="OnIncreaseStockClicked"
                        BackgroundColor="{StaticResource YtSuccess700}" TextColor="White" />
                <Button Text="- Smanji zalihu" Clicked="OnDecreaseStockClicked"
                        BackgroundColor="{StaticResource YtDanger700}" TextColor="White" />
              </HorizontalStackLayout>
            </VerticalStackLayout>
          </Frame>

          <HorizontalStackLayout Spacing="14">
            <Button Text="➕ Dodaj novi dio"
                    Clicked="OnAddPartClicked"
                    BackgroundColor="{StaticResource YtPrimary600}"
                    TextColor="White"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Unos novog rezervnog dijela." />

            <Button Text="✏️ Uredi"
                    Clicked="OnEditPartClicked"
                    BackgroundColor="{StaticResource YtAccent50}"
                    TextColor="{StaticResource YtAccent700}"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Uređivanje odabranog dijela." />

            <Button Text="🗑️ Briši"
                    Clicked="OnDeletePartClicked"
                    BackgroundColor="{StaticResource YtDanger700}"
                    TextColor="White"
                    FontAttributes="Bold"
                    maui:ToolTipProperties.Text="Brisanje odabranog dijela iz baze." />
          </HorizontalStackLayout>

          <CollectionView x:Name="PartListView"
                          ItemsSource="{Binding Parts}"
                          SelectionMode="Single"
                          HeightRequest="440"
                          BackgroundColor="{StaticResource YtSurface}">
            <CollectionView.ItemTemplate>
              <DataTemplate>
                <Frame Margin="0,2,0,2"
                       CornerRadius="8"
                       Padding="10"
                       BackgroundColor="{StaticResource YtSurface}"
                       HasShadow="False"
                       BorderColor="{StaticResource YtRowBorder}">
                  <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding Name}"
                           FontSize="17"
                           FontAttributes="Bold"
                           TextColor="{StaticResource YtOnSurface}" />
                    <Label Text="{Binding Code}"
                           FontSize="13"
                           TextColor="{StaticResource YtOnSurfaceDim}"
                           maui:ToolTipProperties.Text="Interna oznaka dijela" />
                    <Label Text="{Binding Supplier}"
                           FontSize="13"
                           TextColor="{StaticResource YtOnSurface}"
                           maui:ToolTipProperties.Text="Dobavljač dijela" />
                    <Label Text="{Binding Location}"
                           FontSize="13"
                           TextColor="{StaticResource YtOnSurfaceDim}"
                           maui:ToolTipProperties.Text="Lokacija skladišta" />
                    <Label Text="{Binding Price, StringFormat='Cijena: {0:F2} €'}"
                           FontSize="12"
                           TextColor="{StaticResource YtSuccess700}" />
                    <Label Text="{Binding Stock, StringFormat='Stanje: {0} kom'}"
                           FontSize="12"
                           TextColor="{StaticResource YtPrimary700}" />
                    <Label Text="{Binding MinStockAlert, StringFormat='Min: {0} kom'}"
                           FontSize="12"
                           TextColor="{StaticResource YtOnSurfaceDim}" />
                    <Frame Padding="6,2" CornerRadius="6" BackgroundColor="{StaticResource YtDanger50}" IsVisible="{Binding IsStockCritical}">
                      <Label Text="⚠ Low stock" FontSize="11" TextColor="{StaticResource YtDanger700}"/>
                    </Frame>
                    <Label Text="{Binding LinkedWorkOrdersCount, StringFormat='WO povezanih: {0}'}"
                           FontSize="11"
                           TextColor="{StaticResource YtOnSurfaceDim}" />
                    <Label Text="{Binding Image}"
                           FontSize="12"
                           TextColor="{StaticResource YtOnSurfaceDim}"
                           maui:ToolTipProperties.Text="Putanja slike dijela" />
                  </VerticalStackLayout>
                </Frame>
              </DataTemplate>
            </CollectionView.ItemTemplate>
          </CollectionView>

          <Label Text="Kliknite na redak za odabir dijela. Moguće je uređivati ili brisati samo odabrani dio."
                 FontSize="12"
                 TextColor="{StaticResource YtOnSurfaceDim}"
                 HorizontalOptions="Center"/>
        </VerticalStackLayout>

      </Frame>
    </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>

