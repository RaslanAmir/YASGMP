<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="YasGMP.Views.UsersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:YasGMP.Converters"
    xmlns:views="clr-namespace:YasGMP.Views"
    xmlns:models="clr-namespace:YasGMP.Models;assembly=YasGMP.AppCore"
    x:DataType="views:UsersPage"
    Title="Users">

    <ContentPage.Resources>
        <!-- Requires a converter class: public class NullToBoolConverter : IValueConverter -->
        <conv:NullToBoolConverter x:Key="NullToBool" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="User Data" FontSize="20" FontAttributes="Bold" />

            <Entry Placeholder="Username"
                   Text="{Binding UserVM.SelectedUser.Username}" />

            <Entry Placeholder="Full Name"
                   Text="{Binding UserVM.SelectedUser.FullName}" />

            <Entry Placeholder="Email"
                   Keyboard="Email"
                   Text="{Binding UserVM.SelectedUser.Email}" />

            <!-- If you store password hashes, consider a separate secure setter in the VM -->
            <Entry Placeholder="Password"
                   IsPassword="True"
                   Text="{Binding UserVM.SelectedUser.PasswordHash}" />

            <Label Text="Role" FontAttributes="Bold" Margin="0,12,0,0" />
            <Picker ItemsSource="{Binding RolePermVM.Roles}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding RolePermVM.SelectedRole}" />

            <Button Text="Assign Role"
                    Margin="0,4,0,8"
                    Command="{Binding RolePermVM.AssignRoleCommand}"
                    IsEnabled="{Binding RolePermVM.SelectedRole, Converter={StaticResource NullToBool}}" />

            <Label Text="Permissions" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding RolePermVM.Permissions}"
                            SelectionMode="Single"
                            SelectedItem="{Binding RolePermVM.SelectedPermission}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Permission">
                        <Label Text="{Binding Name}" Padding="8,4" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Spacing="8" Margin="0,4,0,0">
                <Button Text="Assign Permission"
                        Command="{Binding RolePermVM.AssignPermissionCommand}"
                        IsEnabled="{Binding RolePermVM.SelectedPermission, Converter={StaticResource NullToBool}}" />
                <Button Text="Remove Permission"
                        Command="{Binding RolePermVM.RemovePermissionCommand}"
                        IsEnabled="{Binding RolePermVM.SelectedPermission, Converter={StaticResource NullToBool}}" />
            </HorizontalStackLayout>

            <Button Text="Save User"
                    Margin="0,12,0,0"
                    Command="{Binding UserVM.AddUserCommand}"
                    IsEnabled="{Binding UserVM.SelectedUser, Converter={StaticResource NullToBool}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
