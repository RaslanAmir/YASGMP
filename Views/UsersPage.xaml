<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="YasGMP.UsersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:YasGMP.UI"
    Title="Korisnici – YasGMP">

    <ContentPage.Content>
        <VerticalStackLayout Padding="28,20,28,20" Spacing="18" BackgroundColor="#f5f7fa">
            <Frame 
                BackgroundColor="White"
                CornerRadius="14"
                HasShadow="True"
                Padding="20">

                <VerticalStackLayout Spacing="16">
                    <Label 
                        Text="Pregled svih korisnika sustava"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="#2962ff"
                        HorizontalOptions="Center"/>

                    <HorizontalStackLayout Spacing="14">
                        <Button 
                            Text="➕ Dodaj novog korisnika"
                            Clicked="OnAddUserClicked"
                            BackgroundColor="#e3f2fd"
                            TextColor="#1565c0"
                            FontAttributes="Bold"
                            ui:ToolTipProperties.Text="Unos novog korisnika." />

                        <Button 
                            Text="✏️ Uredi"
                            Clicked="OnEditUserClicked"
                            BackgroundColor="#fffde7"
                            TextColor="#f9a825"
                            FontAttributes="Bold"
                            ui:ToolTipProperties.Text="Uređivanje odabranog korisnika." />

                        <Button 
                            Text="🗑️ Briši"
                            Clicked="OnDeleteUserClicked"
                            BackgroundColor="#ffebee"
                            TextColor="#c62828"
                            FontAttributes="Bold"
                            ui:ToolTipProperties.Text="Brisanje odabranog korisnika iz baze." />
                    </HorizontalStackLayout>

                    <CollectionView 
                        x:Name="UserListView"
                        ItemsSource="{Binding Users}"
                        SelectionMode="Single"
                        HeightRequest="440"
                        BackgroundColor="#f5f7fa">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame 
                                    Margin="0,2,0,2"
                                    CornerRadius="8"
                                    Padding="10"
                                    BackgroundColor="#f8fafc"
                                    HasShadow="False"
                                    BorderColor="#cfd8dc">

                                    <VerticalStackLayout Spacing="3">
                                        <Label 
                                            Text="{Binding FullName}"
                                            FontSize="17"
                                            FontAttributes="Bold"
                                            TextColor="#263238" />
                                        <Label 
                                            Text="{Binding Username}"
                                            FontSize="13"
                                            TextColor="#607d8b"
                                            ui:ToolTipProperties.Text="Korisničko ime za prijavu" />
                                        <Label 
                                            Text="{Binding Role}"
                                            FontSize="13"
                                            TextColor="#00796b"
                                            ui:ToolTipProperties.Text="Uloga (admin, sef, tehnicar, auditor...)" />
                                        <Label 
                                            Text="{Binding Active, StringFormat='Aktivan: {0}'}"
                                            FontSize="12"
                                            TextColor="#388e3c" />
                                        <Label 
                                            Text="{Binding Email}"
                                            FontSize="12"
                                            TextColor="#2962ff" />
                                        <Label 
                                            Text="{Binding Phone}"
                                            FontSize="12"
                                            TextColor="#bdbdbd" />
                                        <Label 
                                            Text="{Binding LastLogin, StringFormat='Zadnja prijava: {0:yyyy-MM-dd HH:mm}'}"
                                            FontSize="12"
                                            TextColor="#b0bec5" />
                                        <Label 
                                            Text="{Binding DigitalSignature}"
                                            FontSize="12"
                                            TextColor="#fbc02d"
                                            ui:ToolTipProperties.Text="Digitalni potpis (za audit, validaciju)" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label
                        Text="Kliknite na redak za odabir korisnika. Moguće je uređivati ili brisati samo odabranog."
                        FontSize="12"
                        TextColor="#bdbdbd"
                        HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
