<Window x:Class="YasGMP.Wpf.Dialogs.AiAssistantDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Assistant" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ask YasGMP Assistant (ChatGPT)" FontWeight="Bold" FontSize="16"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding History}" Margin="0,8,0,8"/>

        <DockPanel Grid.Row="2">
            <TextBox Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" DockPanel.Dock="Left" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            <Button Content="Send" Command="{Binding SendCommand}" Margin="8,0,0,0" Width="100"/>
        </DockPanel>
    </Grid>
</Window>

