<Window x:Class="YasGMP.Wpf.Dialogs.StockTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="420"
        MinHeight="360"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <DockPanel Margin="16">
        <StackPanel>
            <TextBlock Text="{Binding DialogTitle}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
            <TextBlock Text="{Binding PartLabel}" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,16" />

            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="Warehouse" FontWeight="SemiBold" />
                <ComboBox ItemsSource="{Binding Warehouses}"
                          SelectedItem="{Binding SelectedWarehouse, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          MinWidth="260" />
            </StackPanel>

            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="Quantity" FontWeight="SemiBold" />
                <TextBox Text="{Binding QuantityText, UpdateSourceTrigger=PropertyChanged}" MinWidth="120" />
                <TextBlock Text="Use negative values to decrease stock when adjusting." Visibility="{Binding IsAdjustment, Converter={StaticResource BooleanToVisibilityConverter}}" FontSize="11" Foreground="Gray" />
            </StackPanel>

            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="Document" FontWeight="SemiBold" />
                <TextBox Text="{Binding Document, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,8">
                <TextBlock Text="Note" FontWeight="SemiBold" />
                <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Margin="0,0,0,8" Visibility="{Binding IsAdjustment, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Adjustment Reason" FontWeight="SemiBold" />
                <TextBox Text="{Binding AdjustmentReason, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="DarkRed" Margin="0,4,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ProgressBar IsIndeterminate="True" Height="4" Margin="0,12,0,0" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Command="{Binding ConfirmCommand}" />
                <Button Content="Cancel" Width="90" IsCancel="True" Command="{Binding CancelCommand}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
