<UserControl x:Class="YasGMP.Wpf.Shell.ModulesPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="280"
             ToolTipService.ToolTip="{Binding HelpText}"
             AutomationProperties.Name="{Binding AutomationName}"
             AutomationProperties.AutomationId="{Binding AutomationId}"
             AutomationProperties.HelpText="{Binding HelpText}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Groups}">
            <ItemsControl.Resources>
                <Style TargetType="Expander">
                    <Setter Property="Margin" Value="0,0,0,8" />
                    <Setter Property="IsExpanded" Value="True" />
                    <Setter Property="ToolTipService.ToolTip">
                        <Setter.Value>
                            <Binding Path="ToolTip" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.Name">
                        <Setter.Value>
                            <Binding Path="AutomationName" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.AutomationId">
                        <Setter.Value>
                            <Binding Path="AutomationId" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.HelpText">
                        <Setter.Value>
                            <Binding Path="ToolTip" />
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="12,4,0,4" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="ToolTipService.ToolTip">
                        <Setter.Value>
                            <Binding Path="ToolTip" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.Name">
                        <Setter.Value>
                            <Binding Path="AutomationName" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.AutomationId">
                        <Setter.Value>
                            <Binding Path="AutomationId" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="AutomationProperties.HelpText">
                        <Setter.Value>
                            <Binding Path="ToolTip" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </ItemsControl.Resources>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Header}">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Header}"
                                           ToolTipService.ToolTip="{Binding ToolTip}"
                                           AutomationProperties.Name="{Binding AutomationName}"
                                           AutomationProperties.AutomationId="{Binding AutomationId}"
                                           AutomationProperties.HelpText="{Binding ToolTip}" />
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <ItemsControl ItemsSource="{Binding Modules}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}"
                                            Command="{Binding OpenCommand}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
