<UserControl x:Class="YasGMP.Wpf.Views.AssetsModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             xmlns:conv="clr-namespace:YasGMP.Wpf.Converters"
             xmlns:shared="clr-namespace:YasGMP.Wpf.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600"
             AutomationProperties.Name="{DynamicResource Module_Assets_Title}"
             ToolTipService.ToolTip="{DynamicResource Module_Assets_Tooltip}">
    <UserControl.Resources>
        <conv:ResourceStringConverter x:Key="ResourceString" />
    </UserControl.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton
                            Content="{Binding CaptionKey, Converter={StaticResource ResourceString}}"
                            Command="{Binding Command}"
                            IsChecked="{Binding IsChecked}"
                            Margin="0,0,4,0"
                            AutomationProperties.Name="{Binding AutomationNameKey, Converter={StaticResource ResourceString}}" AutomationProperties.AutomationId="{Binding AutomationIdKey}">
                            <ToggleButton.ToolTip>
                                <ToolTip Content="{Binding ToolTipKey, Converter={StaticResource ResourceString}}" />
                            </ToggleButton.ToolTip>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <Button Content="CFL"
                    AutomationProperties.Name="{DynamicResource Button_CFL}"
                    AutomationProperties.AutomationId="CflButton"
                    ToolTip="{DynamicResource Tooltip_CFL}"
                    Command="{Binding ShowCflCommand}" />
            <Button Content="{DynamicResource Button_Attach}"
                    AutomationProperties.Name="{DynamicResource Button_Attach}"
                    AutomationProperties.AutomationId="AttachButton"
                    ToolTip="{DynamicResource Tooltip_Attach}"
                    Command="{Binding AttachDocumentCommand}"
                    Margin="8,0,0,0" />
            <controls:GoldenArrowButton
                AutomationProperties.Name="{DynamicResource Button_GoldenArrow}"
                AutomationProperties.AutomationId="GoldenArrowButton"
                ToolTip="{DynamicResource Tooltip_GoldenArrow}"
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Search}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         AutomationProperties.Name="{DynamicResource Label_Search}"
                         ToolTip="{DynamicResource Tooltip_SearchBox}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0"
                      AutomationProperties.Name="{DynamicResource Module_Assets_Title}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Column_Code}" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Column_Title}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Column_Status}" Binding="{Binding Status}" Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Column_Location}" Binding="{Binding InspectorFields[0].Value}" Width="150" />
                </DataGrid.Columns>
                <DataGrid.ToolTip>
                    <ToolTip Content="{DynamicResource Tooltip_RecordsGrid}" />
                </DataGrid.ToolTip>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Label_AssetDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Label_Code}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Code}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Code}"
                                     ToolTip="{DynamicResource Tooltip_Assets_Code}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Name}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Title}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Name}"
                                     ToolTip="{DynamicResource Tooltip_Assets_Name}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Description}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Manufacturer}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Manufacturer}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Manufacturer}"
                                     ToolTip="{DynamicResource Tooltip_Assets_Manufacturer}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Model}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="4"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Model, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Model}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Model}"
                                     ToolTip="{DynamicResource Tooltip_Assets_Model}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Location}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="5"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Location, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Location}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Location}"
                                     ToolTip="{DynamicResource Tooltip_Assets_Location}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Status}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="6"
                                      Grid.Column="1"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      AutomationProperties.Name="{DynamicResource Label_Status}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Status}"
                                      ToolTip="{DynamicResource Tooltip_Assets_Status}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_URS_Document}" Grid.Row="7" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="7"
                                     Grid.Column="1"
                                     Text="{Binding Editor.UrsDoc, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_URS_Document}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_UrsDoc}"
                                     ToolTip="{DynamicResource Tooltip_Assets_UrsDoc}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_InstallDate}" Grid.Row="8" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="8"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.InstallDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_InstallDate}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_InstallDate}"
                                        ToolTip="{DynamicResource Tooltip_Assets_InstallDate}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_ProcurementDate}" Grid.Row="9" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="9"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.ProcurementDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_ProcurementDate}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_ProcurementDate}"
                                        ToolTip="{DynamicResource Tooltip_Assets_ProcurementDate}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_WarrantyUntil}" Grid.Row="10" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="10"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.WarrantyUntil, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_WarrantyUntil}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_WarrantyUntil}"
                                        ToolTip="{DynamicResource Tooltip_Assets_WarrantyUntil}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <StackPanel Grid.Row="11" Grid.Column="1" Orientation="Horizontal" Margin="0,6,0,0">
                                <CheckBox Content="{DynamicResource Label_CriticalAsset}"
                                          IsChecked="{Binding Editor.IsCritical, Mode=TwoWay}"
                                          AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_IsCritical}"
                                          ToolTip="{DynamicResource Tooltip_Assets_IsCritical}"
                                          IsEnabled="{Binding IsEditorEnabled}" />
                                <TextBlock Text="{DynamicResource Label_SerialNo}" Margin="16,0,8,0" VerticalAlignment="Center" />
                                <TextBox Width="140"
                                         Text="{Binding Editor.SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                                         AutomationProperties.Name="{DynamicResource Label_SerialNo}"
                                         AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_SerialNumber}"
                                         ToolTip="{DynamicResource Tooltip_Assets_SerialNumber}"
                                         IsEnabled="{Binding IsEditorEnabled}" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{DynamicResource Label_LifecyclePhase}" Margin="0,0,0,4" />
                        <TextBox Text="{Binding Editor.LifecyclePhase, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEditorEnabled}"
                                 AutomationProperties.Name="{DynamicResource Label_LifecyclePhase}"
                                 AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_LifecyclePhase}"
                                 ToolTip="{DynamicResource Tooltip_Assets_LifecyclePhase}" />

                        <TextBlock Text="{DynamicResource Label_Notes}" Margin="0,12,0,4" />
                        <TextBox Text="{Binding Editor.Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 IsEnabled="{Binding IsEditorEnabled}"
                                 AutomationProperties.Name="{DynamicResource Label_Notes}"
                                 AutomationProperties.HelpText="{DynamicResource Tooltip_Assets_Notes}"
                                 ToolTip="{DynamicResource Tooltip_Assets_Notes}" />

                        <shared:SignatureMetadataView DataContext="{Binding Editor}" />

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="â€¢" Foreground="DarkRed" Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding}" Foreground="DarkRed" TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,12,0,0">
                <TextBlock Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" />
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
