<UserControl x:Class="YasGMP.Wpf.Views.CalibrationModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}" Command="{Binding ShowCflCommand}" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}"/>
            <Button Content="{DynamicResource Module.Toolbar.Button.Attach.Content}" Command="{Binding AttachDocumentCommand}" Margin="8,0,0,0" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Attach.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Attach.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Attach.AutomationId}"/>
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Code.Header}" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Title.Header}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Description.Header}" Binding="{Binding Description}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Module.Calibration.Text.CalibrationDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Component}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="0"
                                      Grid.Column="1"
                                      ItemsSource="{Binding ComponentOptions}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Editor.ComponentId, Mode=TwoWay}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Supplier}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="1"
                                      Grid.Column="1"
                                      ItemsSource="{Binding SupplierOptions}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Editor.SupplierId, Mode=TwoWay}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.CalibrationDate}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="2"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.CalibrationDate, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.NextDue}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="3"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.NextDue, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Result}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="4"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Result, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Certificate}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <StackPanel Grid.Row="5"
                                        Grid.Column="1"
                                        Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Manage certificate..."
                                            Command="{Binding ManageCertificateCommand}"
                                            Margin="0,0,8,0"
                                            Width="160" />
                                    <Button Content="Clear"
                                            Command="{Binding ClearCertificateCommand}"
                                            Width="80" />
                                </StackPanel>
                                <Border Margin="0,8,0,0"
                                        Padding="8"
                                        BorderBrush="#FFCCCCCC"
                                        BorderThickness="1"
                                        Background="#FFF7F7F7">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Document"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,8,4" />
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.DisplayName}"
                                                   TextWrapping="Wrap"
                                                   FontWeight="SemiBold" />

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="Certificate #"
                                                   Margin="0,0,8,4" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.CertificateNumber}"
                                                   TextWrapping="Wrap" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Text="Issuer"
                                                   Margin="0,0,8,4" />
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.Issuer}"
                                                   TextWrapping="Wrap" />

                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Text="Issued"
                                                   Margin="0,0,8,4" />
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.IssuedOn, StringFormat={}{0:d}}" />

                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="0"
                                                   Text="Expires"
                                                   Margin="0,0,8,4" />
                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.ExpiresOn, StringFormat={}{0:d}}" />

                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="0"
                                                   Text="File"
                                                   Margin="0,0,8,4" />
                                        <StackPanel Grid.Row="5"
                                                    Grid.Column="1"
                                                    Orientation="Vertical">
                                            <TextBlock Text="{Binding Editor.Certificate.FileName}" />
                                            <TextBlock Text="{Binding Editor.Certificate.FileSizeDisplay}"
                                                       Foreground="Gray" />
                                        </StackPanel>

                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="0"
                                                   Text="Notes"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="1"
                                                   Text="{Binding Editor.Certificate.Notes}"
                                                   TextWrapping="Wrap" />

                                        <TextBlock Grid.RowSpan="7"
                                                   Grid.ColumnSpan="2"
                                                   Text="No certificate selected."
                                                   Foreground="Gray"
                                                   FontStyle="Italic">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Editor.Certificate}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Comments}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Top" />
                            <TextBox Grid.Row="6"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Comment, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,8,0,0" />
        </Grid>
    </DockPanel>
</UserControl>
