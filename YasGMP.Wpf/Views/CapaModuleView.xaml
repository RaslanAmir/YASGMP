<UserControl x:Class="YasGMP.Wpf.Views.CapaModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             AutomationProperties.Name="{DynamicResource Module_CAPA_Title}"
             ToolTipService.ToolTip="{DynamicResource Module_CAPA_Tooltip}">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Caption}"
                                      Command="{Binding Command}"
                                      IsChecked="{Binding IsChecked}"
                                      Margin="0,0,4,0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Button_CFL}"
                    ToolTipService.ToolTip="{DynamicResource Tooltip_CFL}"
                    Command="{Binding ShowCflCommand}"
                    AutomationProperties.AutomationId="CflButton" />
            <Button Content="{DynamicResource Button_Attach}"
                    ToolTipService.ToolTip="{DynamicResource Tooltip_Attach}"
                    AutomationProperties.AutomationId="AttachButton" Command="{Binding AttachDocumentCommand}"
                    Margin="8,0,0,0" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}"
                                        ToolTipService.ToolTip="{DynamicResource Tooltip_GoldenArrow}"
                                        Margin="8,0,0,0"
                                        AutomationProperties.AutomationId="GoldenArrowButton" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Search}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" AutomationProperties.Name="{DynamicResource Label_Search}" ToolTip="{DynamicResource Tooltip_SearchBox}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Column_Code}" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Column_Title}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Column_Status}" Binding="{Binding Status}" Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Column_Priority}" Binding="{Binding InspectorFields[0].Value}" Width="120" />
                </DataGrid.Columns>
                <DataGrid.ToolTip>
                    <ToolTip Content="{DynamicResource Tooltip_RecordsGrid}" />
                </DataGrid.ToolTip>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Label_CAPADetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Label_Title}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Title, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Title}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Title}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Title}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Description}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     AutomationProperties.Name="{DynamicResource Label_Description}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Description}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Description}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Component}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="2"
                                       Grid.Column="1"
                                       ItemsSource="{Binding ComponentOptions}"
                                       SelectedValuePath="Id"
                                       DisplayMemberPath="Name"
                                       SelectedValue="{Binding Editor.ComponentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       AutomationProperties.Name="{DynamicResource Label_Component}"
                                       AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Component}"
                                       ToolTip="{DynamicResource Tooltip_CAPA_Component}"
                                       IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_AssignedTo}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AssignedToId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_AssignedTo}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_AssignedTo}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_AssignedTo}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Priority}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                       Grid.Column="1"
                                       ItemsSource="{Binding PriorityOptions}"
                                       SelectedItem="{Binding Editor.Priority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       AutomationProperties.Name="{DynamicResource Label_Priority}"
                                       AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Priority}"
                                       ToolTip="{DynamicResource Tooltip_CAPA_Priority}"
                                       IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Status}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="5"
                                       Grid.Column="1"
                                       ItemsSource="{Binding StatusOptions}"
                                       SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       AutomationProperties.Name="{DynamicResource Label_Status}"
                                       AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Status}"
                                       ToolTip="{DynamicResource Tooltip_CAPA_Status}"
                                       IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Opened}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="6"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.DateOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_Opened}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Opened}"
                                        ToolTip="{DynamicResource Tooltip_CAPA_Opened}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Closed}" Grid.Row="7" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="7"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.DateClose, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_Closed}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Closed}"
                                        ToolTip="{DynamicResource Tooltip_CAPA_Closed}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Reason}" Grid.Row="8" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="8"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Reason, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Reason}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Reason}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Reason}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_RootCause}" Grid.Row="9" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="9"
                                     Grid.Column="1"
                                     Text="{Binding Editor.RootCause, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_RootCause}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_RootCause}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_RootCause}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_CorrectiveAction}" Grid.Row="10" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="10"
                                     Grid.Column="1"
                                     Text="{Binding Editor.CorrectiveAction, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_CorrectiveAction}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_CorrectiveAction}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_CorrectiveAction}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_PreventiveAction}" Grid.Row="11" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="11"
                                     Grid.Column="1"
                                     Text="{Binding Editor.PreventiveAction, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_PreventiveAction}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_PreventiveAction}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_PreventiveAction}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Actions}" Grid.Row="12" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="12"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Actions, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_Actions}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Actions}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Actions}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Notes}" Grid.Row="13" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="13"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Notes, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_Notes}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Notes}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Notes}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Comments}" Grid.Row="14" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="14"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Comments, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AutomationProperties.Name="{DynamicResource Label_Comments}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_CAPA_Comments}"
                                     ToolTip="{DynamicResource Tooltip_CAPA_Comments}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="IndianRed" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" Margin="0,8,0,0" />
        </Grid>
    </DockPanel>
</UserControl>



