<UserControl x:Class="YasGMP.Wpf.Views.ComponentsModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             xmlns:conv="clr-namespace:YasGMP.Wpf.Converters"
             mc:Ignorable="d"
             AutomationProperties.Name="{DynamicResource Module_Components_Title}"
             ToolTipService.ToolTip="{DynamicResource Module_Components_Tooltip}">
    <UserControl.Resources>
        <conv:ResourceStringConverter x:Key="ResourceString" />
    </UserControl.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding CaptionKey, Converter={StaticResource ResourceString}}"
                                      AutomationProperties.Name="{Binding AutomationNameKey, Converter={StaticResource ResourceString}}"
                                      Command="{Binding Command}"
                                      IsChecked="{Binding IsChecked}"
                                       Margin="0,0,4,0" AutomationProperties.AutomationId="{Binding AutomationIdKey}">
                            <ToggleButton.ToolTip>
                                <ToolTip Content="{Binding ToolTipKey, Converter={StaticResource ResourceString}}" />
                            </ToggleButton.ToolTip>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <Button Content="CFL"
                    AutomationProperties.Name="{DynamicResource Button_CFL}"
                    AutomationProperties.AutomationId="CflButton"
                    ToolTip="{DynamicResource Tooltip_CFL}"
                    Command="{Binding ShowCflCommand}" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}"
                                       AutomationProperties.Name="{DynamicResource Button_GoldenArrow}"
                                       AutomationProperties.AutomationId="GoldenArrowButton"
                                       ToolTip="{DynamicResource Tooltip_GoldenArrow}"
                                       Margin="8,0,0,0" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Search}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         AutomationProperties.Name="{DynamicResource Label_Search}"
                         ToolTip="{DynamicResource Tooltip_SearchBox}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0"
                      AutomationProperties.Name="{DynamicResource Module_Components_Title}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Column_Code}" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Column_Title}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Column_Machine}" Binding="{Binding InspectorFields[0].Value}" Width="180" />
                    <DataGridTextColumn Header="{DynamicResource Column_Status}" Binding="{Binding Status}" Width="140" />
                </DataGrid.Columns>
                <DataGrid.ToolTip>
                    <ToolTip Content="{DynamicResource Tooltip_RecordsGrid}" />
                </DataGrid.ToolTip>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Label_Component}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Label_Machine}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="0"
                                      Grid.Column="1"
                                      ItemsSource="{Binding MachineOptions}"
                                      SelectedValue="{Binding Editor.MachineId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      AutomationProperties.Name="{DynamicResource Label_Machine}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Machine}"
                                      ToolTip="{DynamicResource Tooltip_Components_Machine}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Code}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Code}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Code}"
                                     ToolTip="{DynamicResource Tooltip_Components_Code}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Name}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Name}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Name}"
                                     ToolTip="{DynamicResource Tooltip_Components_Name}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Type}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="3"
                                      Grid.Column="1"
                                      ItemsSource="{Binding TypeOptions}"
                                      SelectedItem="{Binding Editor.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      AutomationProperties.Name="{DynamicResource Label_Type}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Type}"
                                      ToolTip="{DynamicResource Tooltip_Components_Type}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Status}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                      Grid.Column="1"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      AutomationProperties.Name="{DynamicResource Label_Status}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Status}"
                                      ToolTip="{DynamicResource Tooltip_Components_Status}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Documentation}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="5"
                                     Grid.Column="1"
                                     Text="{Binding Editor.SopDoc, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Documentation}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Documentation}"
                                     ToolTip="{DynamicResource Tooltip_Components_Documentation}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_InstallDate}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="6"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.InstallDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_InstallDate}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Components_InstallDate}"
                                        ToolTip="{DynamicResource Tooltip_Components_InstallDate}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_SerialNo}" Grid.Row="7" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="7"
                                     Grid.Column="1"
                                     Text="{Binding Editor.SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_SerialNo}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_SerialNumber}"
                                     ToolTip="{DynamicResource Tooltip_Components_SerialNumber}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Suppliers}" Grid.Row="8" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="8"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Supplier, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Suppliers}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Supplier}"
                                     ToolTip="{DynamicResource Tooltip_Components_Supplier}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_WarrantyUntil}" Grid.Row="9" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="9"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.WarrantyUntil, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_WarrantyUntil}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Components_WarrantyUntil}"
                                        ToolTip="{DynamicResource Tooltip_Components_WarrantyUntil}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_LifecyclePhase}" Grid.Row="10" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="10"
                                     Grid.Column="1"
                                     Text="{Binding Editor.LifecycleState, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_LifecyclePhase}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Components_LifecycleState}"
                                     ToolTip="{DynamicResource Tooltip_Components_LifecycleState}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <TextBlock Text="{DynamicResource Label_Comments}" Margin="0,0,0,4" />
                        <TextBox Text="{Binding Editor.Comments, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 AutomationProperties.Name="{DynamicResource Label_Comments}"
                                 AutomationProperties.HelpText="{DynamicResource Tooltip_Components_Comments}"
                                 ToolTip="{DynamicResource Tooltip_Components_Comments}"
                                 IsEnabled="{Binding IsEditorEnabled}" />

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="â€¢" Foreground="DarkRed" Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding}" Foreground="DarkRed" TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,12,0,0">
                <TextBlock Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" />
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
