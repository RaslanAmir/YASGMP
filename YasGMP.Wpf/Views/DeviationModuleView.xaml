<UserControl x:Class="YasGMP.Wpf.Views.DeviationModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Views.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}"
                    Command="{Binding ShowCflCommand}"
                    ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}" />
            <Button Content="{DynamicResource Module.Toolbar.Button.Attach.Content}"
                    Command="{Binding AttachEvidenceCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Attach.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Attach.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Attach.AutomationId}" />
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Title.Header}"
                                        Binding="{Binding Title}"
                                        Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}"
                                        Binding="{Binding Status}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Module.Deviations.Grid.Column.Severity.Header}"
                                        Binding="{Binding InspectorFields[0].Value}"
                                        Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Module.Deviations.Grid.Column.Risk.Header}"
                                        Binding="{Binding InspectorFields[2].Value}"
                                        Width="100" />
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Module.Deviations.Text.DetailHeader}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.Code}"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Title.Header}"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Title, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Description.Header}"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Top" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.Severity}"
                                       Grid.Row="3"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Row="3"
                                      Grid.Column="1"
                                      ItemsSource="{Binding SeverityOptions}"
                                      SelectedItem="{Binding Editor.Severity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,6">
                                <CheckBox Content="{DynamicResource Module.Deviations.Text.IsCritical}"
                                          IsChecked="{Binding Editor.IsCritical, Mode=TwoWay}"
                                          IsEnabled="{Binding IsEditorEnabled}" />
                                <TextBlock Text="{DynamicResource Module.Deviations.Text.Status}"
                                           Margin="16,0,8,0"
                                           VerticalAlignment="Center" />
                                <ComboBox Width="150"
                                          ItemsSource="{Binding StatusOptions}"
                                          DisplayMemberPath="Display"
                                          SelectedValuePath="Code"
                                          SelectedValue="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding IsEditorEnabled}" />
                            </StackPanel>

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.ReportedAt}"
                                       Grid.Row="5"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <DatePicker Grid.Row="5"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.ReportedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.ReportedBy}"
                                       Grid.Row="6"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="6"
                                     Grid.Column="1"
                                     Text="{Binding Editor.ReportedById, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.InvestigatorId}"
                                       Grid.Row="7"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="7"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AssignedInvestigatorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.InvestigatorName}"
                                       Grid.Row="8"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="8"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AssignedInvestigatorName, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.InvestigationStarted}"
                                       Grid.Row="9"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <DatePicker Grid.Row="9"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.InvestigationStartedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Capa.Text.RootCause}"
                                       Grid.Row="10"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Top" />
                            <TextBox Grid.Row="10"
                                     Grid.Column="1"
                                     Text="{Binding Editor.RootCause, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.LinkedCapa}"
                                       Grid.Row="11"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="11"
                                     Grid.Column="1"
                                     Text="{Binding Editor.LinkedCapaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.ClosureComment}"
                                       Grid.Row="12"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Top" />
                            <TextBox Grid.Row="12"
                                     Grid.Column="1"
                                     Text="{Binding Editor.ClosureComment, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.ClosedAt}"
                                       Grid.Row="13"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Center" />
                            <DatePicker Grid.Row="13"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.ClosedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <StackPanel Grid.Row="14"
                                        Grid.Column="1"
                                        Orientation="Horizontal"
                                        Margin="0,6,0,0">
                                <TextBlock Text="{DynamicResource Module.Deviations.Text.RiskScore}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <TextBox Width="80"
                                         Text="{Binding Editor.RiskScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditorEnabled}" />
                                <TextBlock Text="{DynamicResource Module.Deviations.Text.AnomalyScore}"
                                           VerticalAlignment="Center"
                                           Margin="16,0,8,0" />
                                <TextBox Width="100"
                                         Text="{Binding Editor.AnomalyScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditorEnabled}" />
                            </StackPanel>

                            <TextBlock Text="{DynamicResource Module.Deviations.Text.AuditNote}"
                                       Grid.Row="15"
                                       Grid.Column="0"
                                       Margin="0,0,8,6"
                                       VerticalAlignment="Top" />
                            <TextBox Grid.Row="15"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AuditNote, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <TextBlock Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Text="{Binding StatusMessage}"
                       Margin="0,12,0,0"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
        </Grid>
    </DockPanel>
</UserControl>
