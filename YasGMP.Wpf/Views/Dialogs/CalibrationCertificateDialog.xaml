<Window x:Class="YasGMP.Wpf.Views.Dialogs.CalibrationCertificateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:YasGMP.Wpf.Converters"
        xmlns:dialogs="clr-namespace:YasGMP.Wpf.ViewModels.Dialogs"
        mc:Ignorable="d"
        Title="Calibration Certificate"
        Height="520"
        Width="640"
        MinHeight="420"
        MinWidth="520"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>
    <Border Padding="18" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.ColumnSpan="2"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"
                       FontWeight="SemiBold">
                <Run Text="Capture the calibration certificate metadata and select the supporting file." />
                <Run Text=" " />
                <Run Text="All changes will be staged until you save the calibration." FontStyle="Italic" />
            </TextBlock>

            <TextBlock Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Text="{Binding CalibrationDisplay}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,0,0,12"
                       Visibility="{Binding CalibrationDisplay, Converter={StaticResource StringToVisibilityConverter}}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Center"
                       Text="Document name" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Margin="0,0,0,8"
                     Text="{Binding DocumentName, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="280"
                     ToolTip="Human-friendly document name or descriptor" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Center"
                       Text="Certificate #" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Margin="0,0,0,8"
                     Text="{Binding CertificateNumber, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="200" />

            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Center"
                       Text="Issuer" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Margin="0,0,0,8"
                     Text="{Binding Issuer, UpdateSourceTrigger=PropertyChanged}" />

            <Grid Grid.Row="5"
                  Grid.Column="1"
                  Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Issued on" Margin="0,0,0,4" />
                    <DatePicker SelectedDate="{Binding IssuedOn}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Expires on" Margin="0,0,0,4" />
                    <DatePicker SelectedDate="{Binding ExpiresOn}" />
                </StackPanel>
            </Grid>

            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Top"
                       Text="Dates" />

            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Top"
                       Text="Notes" />
            <TextBox Grid.Row="6"
                     Grid.Column="1"
                     Margin="0,0,0,12"
                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="80" />

            <TextBlock Grid.Row="7"
                       Grid.Column="0"
                       Margin="0,0,12,8"
                       VerticalAlignment="Top"
                       Text="Certificate file" />

            <StackPanel Grid.Row="7"
                        Grid.Column="1"
                        Orientation="Vertical"
                        Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Select file..."
                            Width="120"
                            Command="{Binding BrowseCommand}" />
                    <Button Content="Clear"
                            Width="100"
                            Margin="8,0,0,0"
                            Command="{Binding ClearFileCommand}" />
                </StackPanel>
                <Border Margin="0,8,0,0"
                        Padding="8"
                        Background="#FFF7F7F7"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding FileSizeDisplay}"
                                   Foreground="Gray"
                                   Visibility="{Binding FileSizeDisplay, Converter={StaticResource StringToVisibilityConverter}}" />
                        <TextBlock Text="No file selected."
                                   Foreground="Gray"
                                   FontStyle="Italic">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FileName}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding FileName}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <TextBlock Grid.Row="8"
                       Grid.ColumnSpan="2"
                       Foreground="DarkRed"
                       Text="{Binding StatusMessage}"
                       Margin="0,0,0,12"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}" />

            <StackPanel Grid.Row="8"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,12">
                <Button Content="Save"
                        Width="110"
                        Margin="0,0,12,0"
                        IsDefault="True"
                        Command="{Binding ConfirmCommand}" />
                <Button Content="Cancel"
                        Width="110"
                        IsCancel="True"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
