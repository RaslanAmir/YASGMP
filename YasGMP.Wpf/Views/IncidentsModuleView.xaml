<UserControl x:Class="YasGMP.Wpf.Views.IncidentsModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:YasGMP.Wpf.Converters"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="900"
             AutomationProperties.Name="{DynamicResource Module_Incidents_Title}"
             ToolTipService.ToolTip="{DynamicResource Module_Incidents_Tooltip}">
    <UserControl.Resources>
        <conv:ResourceStringConverter x:Key="ResourceString" />
    </UserControl.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding CaptionKey, Converter={StaticResource ResourceString}}"
                                      AutomationProperties.Name="{Binding AutomationNameKey, Converter={StaticResource ResourceString}}"
                                      Command="{Binding Command}"
                                      IsChecked="{Binding IsChecked}"
                                       Margin="0,0,4,0" AutomationProperties.AutomationId="{Binding AutomationIdKey}">
                            <ToggleButton.ToolTip>
                                <ToolTip Content="{Binding ToolTipKey, Converter={StaticResource ResourceString}}" />
                            </ToggleButton.ToolTip>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <Button Content="CFL"
                    AutomationProperties.Name="{DynamicResource Button_CFL}"
                    AutomationProperties.AutomationId="CflButton"
                    ToolTip="{DynamicResource Tooltip_CFL}"
                    Command="{Binding ShowCflCommand}" />
            <Button Content="{DynamicResource Button_Attach}"
                    AutomationProperties.Name="{DynamicResource Button_Attach}" AutomationProperties.AutomationId="AttachButton"
                    ToolTip="{DynamicResource Tooltip_Attach}"
                    Command="{Binding AttachEvidenceCommand}"
                    Margin="8,0,0,0" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}"
                                       AutomationProperties.Name="{DynamicResource Button_GoldenArrow}"
                                       AutomationProperties.AutomationId="GoldenArrowButton"
                                       ToolTip="{DynamicResource Tooltip_GoldenArrow}"
                                       Margin="8,0,0,0" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Search}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" AutomationProperties.Name="{DynamicResource Label_Search}" ToolTip="{DynamicResource Tooltip_SearchBox}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Column_Incident}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Column_Status}" Binding="{Binding Status}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Column_Type}" Binding="{Binding InspectorFields[0].Value}" Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Column_Priority}" Binding="{Binding InspectorFields[1].Value}" Width="100" />
                </DataGrid.Columns>
                <DataGrid.ToolTip>
                    <ToolTip Content="{DynamicResource Tooltip_RecordsGrid}" />
                </DataGrid.ToolTip>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Label_IncidentDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Label_Title}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Title, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.Name="{DynamicResource Label_Title}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Title}"
                                     ToolTip="{DynamicResource Tooltip_Incidents_Title}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Description}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     AutomationProperties.Name="{DynamicResource Label_Description}"
                                     AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Description}"
                                     ToolTip="{DynamicResource Tooltip_Incidents_Description}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Type}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      ItemsSource="{Binding TypeOptions}"
                                      SelectedItem="{Binding Editor.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      AutomationProperties.Name="{DynamicResource Label_Type}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Type}"
                                      ToolTip="{DynamicResource Tooltip_Incidents_Type}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Priority}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="3"
                                      Grid.Column="1"
                                      ItemsSource="{Binding PriorityOptions}"
                                      SelectedItem="{Binding Editor.Priority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      AutomationProperties.Name="{DynamicResource Label_Priority}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Priority}"
                                      ToolTip="{DynamicResource Tooltip_Incidents_Priority}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Status}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                      Grid.Column="1"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      AutomationProperties.Name="{DynamicResource Label_Status}"
                                      AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Status}"
                                      ToolTip="{DynamicResource Tooltip_Incidents_Status}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Detected}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="5"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.DetectedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_Detected}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Detected}"
                                        ToolTip="{DynamicResource Tooltip_Incidents_Detected}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Reported}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <DatePicker Grid.Row="6"
                                        Grid.Column="1"
                                        SelectedDate="{Binding Editor.ReportedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        AutomationProperties.Name="{DynamicResource Label_Reported}"
                                        AutomationProperties.HelpText="{DynamicResource Tooltip_Incidents_Reported}"
                                        ToolTip="{DynamicResource Tooltip_Incidents_Reported}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_ReportedBy}" Grid.Row="7" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="7"
                                     Grid.Column="1"
                                     Text="{Binding Editor.ReportedById, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_AssignedTo}" Grid.Row="8" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="8"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AssignedToId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Investigator}" Grid.Row="9" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="9"
                                     Grid.Column="1"
                                     Text="{Binding Editor.AssignedInvestigator, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_WorkOrder}" Grid.Row="10" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="10"
                                     Grid.Column="1"
                                     Text="{Binding Editor.WorkOrderId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_CapaCase}" Grid.Row="11" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="11"
                                     Grid.Column="1"
                                     Text="{Binding Editor.CapaCaseId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_Classification}" Grid.Row="12" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="12"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Classification, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Label_RootCause}" Grid.Row="13" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="13"
                                     Grid.Column="1"
                                     Text="{Binding Editor.RootCause, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <StackPanel Grid.Row="14" Grid.Column="1" Orientation="Horizontal" Margin="0,6,0,0">
                                <CheckBox Content="{DynamicResource Label_CriticalIncident}"
                                          IsChecked="{Binding Editor.IsCritical, Mode=TwoWay}"
                                          IsEnabled="{Binding IsEditorEnabled}" />
                                <TextBlock Text="{DynamicResource Label_RiskLevel}" Margin="16,0,8,0" VerticalAlignment="Center" />
                                <TextBox Width="80"
                                         Text="{Binding Editor.RiskLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditorEnabled}" />
                                <TextBlock Text="{DynamicResource Label_Anomaly}" Margin="16,0,8,0" VerticalAlignment="Center" />
                                <TextBox Width="80"
                                         Text="{Binding Editor.AnomalyScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditorEnabled}" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{DynamicResource Label_ClosureComment}" Margin="0,12,0,4" />
                        <TextBox Text="{Binding Editor.ClosureComment, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 IsEnabled="{Binding IsEditorEnabled}" />

                        <TextBlock Text="{DynamicResource Label_Notes}" Margin="0,12,0,4" />
                        <TextBox Text="{Binding Editor.Notes, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 IsEnabled="{Binding IsEditorEnabled}" />

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="•" Foreground="DarkRed" Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding}" Foreground="DarkRed" TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,12,0,0" />
        </Grid>
    </DockPanel>
</UserControl>


