<UserControl x:Class="YasGMP.Wpf.Views.PartsModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="480"
             d:DesignWidth="960">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}" Command="{Binding ShowCflCommand}" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}"/>
            <Button Content="{DynamicResource Module.Toolbar.Button.Attach.Content}" Command="{Binding AttachDocumentCommand}" Margin="8,0,0,0" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Attach.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Attach.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Attach.AutomationId}"/>
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
            <Separator />
            <Button Content="Stock In"
                    Command="{Binding ReceiveStockCommand}"
                    Margin="8,0,0,0"
                    AutomationProperties.Name="Receive stock"
                    AutomationProperties.AutomationId="Parts.ReceiveStock" />
            <Button Content="Stock Out"
                    Command="{Binding IssueStockCommand}"
                    Margin="4,0,0,0"
                    AutomationProperties.Name="Issue stock"
                    AutomationProperties.AutomationId="Parts.IssueStock" />
            <Button Content="Adjust"
                    Command="{Binding AdjustStockCommand}"
                    Margin="4,0,0,0"
                    AutomationProperties.Name="Adjust stock"
                    AutomationProperties.AutomationId="Parts.AdjustStock" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <DataGrid Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Code.Header}" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Module.Parts.Header.Part}" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}" Binding="{Binding Status}" Width="120" />
                    <DataGridTextColumn Header="{DynamicResource Module.Parts.Header.Stock}" Binding="{Binding InspectorFields[2].Value}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Module.Parts.Text.PartDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Code.Header}" Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Assets.Text.Name}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Description.Header}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Parts.Text.Category}" Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Category, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Status.Header}" Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                      Grid.Column="1"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Parts.Header.Stock}" Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="5"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Stock, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Parts.Text.MinStock}" Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="6"
                                     Grid.Column="1"
                                     Text="{Binding Editor.MinStockAlert, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Assets.Header.Location}" Grid.Row="7" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="7"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Location, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Calibration.Text.Supplier}" Grid.Row="8" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="8"
                                      Grid.Column="1"
                                      ItemsSource="{Binding SupplierOptions}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Editor.DefaultSupplierId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Parts.Text.SKU}" Grid.Row="9" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBox Grid.Row="9"
                                     Grid.Column="1"
                                     Text="{Binding Editor.Sku, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Text="{DynamicResource Module.Parts.Text.WarehouseSummary}" Grid.Row="10" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Top" />
                            <TextBlock Grid.Row="10"
                                       Grid.Column="1"
                                       Text="{Binding Editor.WarehouseSummary}"
                                       TextWrapping="Wrap"
                                       Foreground="DarkSlateGray" />
                        </Grid>

                        <TextBlock Text="{DynamicResource Module.Parts.Text.Price}" Margin="0,0,0,4" />
                        <TextBox Text="{Binding Editor.Price, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 IsEnabled="{Binding IsEditorEnabled}" />

                        <Border Background="#1FFFCCCC" Padding="8" Margin="0,12,0,0" CornerRadius="4" Visibility="{Binding Editor.IsWarehouseStockCritical, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource Module.Parts.Text.Value}" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding StockHealthMessage}" FontWeight="SemiBold" TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>

                        <TextBlock Text="{Binding StockHealthMessage}" Margin="0,8,0,0" Foreground="DarkSlateGray" TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Editor.IsWarehouseStockCritical}" Value="False">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StockHealthMessage}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="{DynamicResource Module.Assets.Text.Value}" Foreground="DarkRed" Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding}" Foreground="DarkRed" TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Padding="8"
                                Margin="0,16,0,0"
                                CornerRadius="4"
                                Background="#FFFFF3CD"
                                BorderBrush="#FFE6C200"
                                BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TransactionAlerts.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock Text="Inventory Alerts" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ItemsControl ItemsSource="{Binding TransactionAlerts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="DarkRed" TextWrapping="Wrap" Margin="0,0,0,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Warehouse Zones" FontWeight="SemiBold" FontSize="14" />
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                                <TextBlock Text="Zone Filter:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                <ComboBox ItemsSource="{Binding ZoneFilters}"
                                          SelectedItem="{Binding SelectedZoneFilter, Mode=TwoWay}"
                                          Width="200" />
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding ZoneSummariesView}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      Height="180">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Warehouse" Binding="{Binding Warehouse}" Width="2*" />
                                    <DataGridTextColumn Header="Zone" Binding="{Binding ZoneLabel}" Width="120" />
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100" />
                                    <DataGridTextColumn Header="Minimum" Binding="{Binding Minimum}" Width="100" />
                                    <DataGridTextColumn Header="Maximum" Binding="{Binding Maximum}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <TextBlock Text="Recent Transactions" FontWeight="SemiBold" FontSize="14" Margin="0,16,0,4" />
                        <DataGrid ItemsSource="{Binding RecentTransactions}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Height="220">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat={}{0:G}}" Width="170" />
                                <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="120" />
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="120" />
                                <DataGridTextColumn Header="Warehouse" Binding="{Binding Warehouse}" Width="*" />
                                <DataGridTextColumn Header="Document" Binding="{Binding Document}" Width="150" />
                                <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="2*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" Margin="0,12,0,0" />
        </Grid>
    </DockPanel>
</UserControl>
