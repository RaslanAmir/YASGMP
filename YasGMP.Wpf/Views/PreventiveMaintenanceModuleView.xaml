<UserControl x:Class="YasGMP.Wpf.Views.PreventiveMaintenanceModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:YasGMP.Wpf.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}"
                    Command="{Binding ShowCflCommand}"
                    ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}" />
            <Button Content="Delete Plan"
                    Command="{Binding DeletePlanCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Delete the selected preventive maintenance plan"
                    AutomationProperties.Name="Delete preventive maintenance plan"
                    AutomationProperties.AutomationId="PreventiveMaintenance.Toolbar.Delete" />
            <Button Content="Generate Work Order"
                    Command="{Binding GenerateWorkOrderCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Open Work Orders pre-filtered for this plan"
                    AutomationProperties.Name="Generate work order from plan"
                    AutomationProperties.AutomationId="PreventiveMaintenance.Toolbar.GenerateWorkOrder" />
            <Button Content="Approve"
                    Command="{Binding ApprovePlanCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Mark plan as approved"
                    AutomationProperties.Name="Approve preventive maintenance plan"
                    AutomationProperties.AutomationId="PreventiveMaintenance.Toolbar.Approve" />
            <Button Content="Attach Checklist"
                    Command="{Binding AttachChecklistCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Attach or update the plan checklist"
                    AutomationProperties.Name="Attach checklist"
                    AutomationProperties.AutomationId="PreventiveMaintenance.Toolbar.AttachChecklist" />
            <Button Content="Show Audit"
                    Command="{Binding ShowAuditTrailCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Show audit history for this plan"
                    AutomationProperties.Name="Show plan audit trail"
                    AutomationProperties.AutomationId="PreventiveMaintenance.Toolbar.ShowAudit" />
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Preventive Maintenance Calendar"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,8" />

                <Calendar Grid.Row="1"
                          SelectedDate="{Binding SelectedCalendarDate, Mode=TwoWay}" />

                <TextBlock Grid.Row="2"
                           Text="Upcoming plan buckets"
                           FontWeight="SemiBold"
                           Margin="0,12,0,4" />

                <ListView Grid.Row="3"
                          ItemsSource="{Binding CalendarDays}"
                          SelectedItem="{Binding SelectedCalendarDay, Mode=TwoWay}"
                          Margin="0,0,0,12">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DisplayDate}" Width="180" />
                            <GridViewColumn Header="Plans" DisplayMemberBinding="{Binding Count}" Width="60" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Grid.Row="4"
                           Text="Plans on selected date"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4" />

                <ListView Grid.Row="5"
                          ItemsSource="{Binding SelectedDayPlans}"
                          SelectedItem="{Binding SelectedCalendarPlan, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Plan" DisplayMemberBinding="{Binding Title}" Width="200" />
                            <GridViewColumn Header="Machine" DisplayMemberBinding="{Binding Machine}" Width="160" />
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120" />
                            <GridViewColumn Header="Frequency" DisplayMemberBinding="{Binding Frequency}" Width="100" />
                            <GridViewColumn Header="Due" DisplayMemberBinding="{Binding DueDisplay}" Width="140" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding RecordsView}"
                          SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Module.Assets.Text.Name}" Binding="{Binding Title}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource Module.Assets.Text.Code}" Binding="{Binding Code}" Width="150" />
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}" Binding="{Binding Status}" Width="120" />
                        <DataGridTextColumn Header="Frequency" Binding="{Binding InspectorFields[1].Value}" Width="120" />
                        <DataGridTextColumn Header="{DynamicResource Module.Calibration.Text.NextDue}" Binding="{Binding InspectorFields[0].Value}" Width="140" />
                    </DataGrid.Columns>
                </DataGrid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Plan details" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Module.Assets.Text.Code}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,8,12" Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource Module.Assets.Text.Name}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,12" Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Module.Assets.Text.Description}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Frequency" Margin="0,0,8,4" />
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="0,0,8,12" Text="{Binding Editor.Frequency, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource Module.Calibration.Text.NextDue}" Margin="8,0,0,4" />
                            <DatePicker Grid.Row="2" Grid.Column="1" Margin="8,0,0,12" SelectedDate="{Binding Editor.NextDue, Mode=TwoWay}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Machine" Margin="0,0,8,4" />
                            <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,8,12" Text="{Binding Editor.Machine, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Component" Margin="8,0,0,4" />
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,12" Text="{Binding Editor.Component, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Status" Margin="0,0,8,4" />
                            <TextBox Grid.Row="4" Grid.Column="0" Margin="0,0,8,12" Text="{Binding Editor.Status, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="1" Text="Checklist" Margin="8,0,0,4" />
                            <TextBox Grid.Row="4" Grid.Column="1" Margin="8,0,0,12" Text="{Binding Editor.ChecklistFile, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Responsible" Margin="0,0,8,4" />
                            <TextBox Grid.Row="5" Grid.Column="0" Margin="0,0,8,12" Text="{Binding Editor.Responsible, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ValidationMessages}" Margin="0,8,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="Red" Text="• {Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <TextBlock Grid.Row="2"
                           Text="{Binding StatusMessage}"
                           Foreground="Green"
                           Margin="0,12,0,0" />
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
