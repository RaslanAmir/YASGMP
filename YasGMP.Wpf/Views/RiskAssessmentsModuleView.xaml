<UserControl x:Class="YasGMP.Wpf.Views.RiskAssessmentsModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             xmlns:vm="clr-namespace:YasGMP.Wpf.ViewModels.Modules"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="900"
             d:DataContext="{d:DesignInstance vm:RiskAssessmentsModuleViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}"
                    Command="{Binding ShowCflCommand}"
                    ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}"
                                       Margin="8,0,0,0"
                                       ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                                       AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                                       AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
            <Separator />
            <Button Content="{DynamicResource Module.RiskAssessments.Toolbar.Initiate.Content}"
                    Command="{Binding InitiateCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.RiskAssessments.Toolbar.Initiate.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.RiskAssessments.Toolbar.Initiate.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Toolbar.Initiate.AutomationId}" />
            <Button Content="{DynamicResource Module.RiskAssessments.Toolbar.Update.Content}"
                    Command="{Binding UpdateCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.RiskAssessments.Toolbar.Update.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.RiskAssessments.Toolbar.Update.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Toolbar.Update.AutomationId}" />
            <Button Content="{DynamicResource Module.RiskAssessments.Toolbar.Approve.Content}"
                    Command="{Binding ApproveCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.RiskAssessments.Toolbar.Approve.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.RiskAssessments.Toolbar.Approve.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Toolbar.Approve.AutomationId}" />
            <Button Content="{DynamicResource Module.RiskAssessments.Toolbar.Close.Content}"
                    Command="{Binding CloseCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.RiskAssessments.Toolbar.Close.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.RiskAssessments.Toolbar.Close.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Toolbar.Close.AutomationId}" />
            <Button Content="{DynamicResource Module.RiskAssessments.Toolbar.Export.Content}"
                    Command="{Binding ExportCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.RiskAssessments.Toolbar.Export.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.RiskAssessments.Toolbar.Export.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Toolbar.Export.AutomationId}" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <TextBox Width="240"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTipService.ToolTip="{DynamicResource Dashboard.Search.Label}"
                         AutomationProperties.Name="{DynamicResource Dashboard.Search.Label}"
                         AutomationProperties.AutomationId="{DynamicResource Module.RiskAssessments.Search.AutomationId}" />
            </DockPanel>

            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.RiskAssessments.Filter.Status}" />
                    <ComboBox Width="180"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding StatusFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.RiskAssessments.Filter.Category}" />
                    <ComboBox Width="180"
                              ItemsSource="{Binding CategoryOptions}"
                              SelectedItem="{Binding CategoryFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>

            <DataGrid Grid.Row="2"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Code.Header}"
                                        Binding="{Binding Code}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Title.Header}"
                                        Binding="{Binding Title}"
                                        Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}"
                                        Binding="{Binding Status}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Module.RiskAssessments.Grid.Column.Category}"
                                        Binding="{Binding InspectorFields[0].Value}"
                                        Width="160" />
                    <DataGridTextColumn Header="{DynamicResource Module.RiskAssessments.Grid.Column.RiskLevel}"
                                        Binding="{Binding InspectorFields[2].Value}"
                                        Width="150" />
                    <DataGridTextColumn Header="{DynamicResource Module.RiskAssessments.Grid.Column.RiskScore}"
                                        Binding="{Binding InspectorFields[3].Value}"
                                        Width="110" />
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="2"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Module.RiskAssessments.Inspector.Header}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Dashboard.Grid.Column.Code.Header}" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.Code, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Dashboard.Grid.Column.Title.Header}" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.Title, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Module.RiskAssessments.Field.Category}" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.Category, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Module.RiskAssessments.Field.Owner}" />
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.Owner.FullName, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Module.RiskAssessments.Field.Status}" />
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedRecord.Status, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Module.RiskAssessments.Field.RiskScore}" />
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.RiskScore, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,0,8,6" Text="{DynamicResource Module.RiskAssessments.Field.RiskLevel}" />
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.RiskLevel, TargetNullValue=}" IsReadOnly="True" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,0,8,0" Text="{DynamicResource Module.RiskAssessments.Field.ReviewDate}" />
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding RiskAssessments.SelectedRiskAssessment.ReviewDate, StringFormat=d, TargetNullValue=}" IsReadOnly="True" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
