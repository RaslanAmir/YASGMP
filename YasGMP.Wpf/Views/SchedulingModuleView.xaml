<UserControl x:Class="YasGMP.Wpf.Views.SchedulingModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="960"
             AutomationProperties.Name="{DynamicResource Module_Scheduling_Title}"
             ToolTipService.ToolTip="{DynamicResource Module_Scheduling_Tooltip}">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Caption}"
                                      Command="{Binding Command}"
                                      IsChecked="{Binding IsChecked}"
                                      Margin="0,0,4,0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Button_CFL}" Command="{Binding ShowCflCommand}" ToolTipService.ToolTip="{DynamicResource Tooltip_CFL}" AutomationProperties.AutomationId="CflButton" />
            <Button Content="{DynamicResource Button_Attach}" AutomationProperties.AutomationId="AttachButton" Command="{Binding AttachDocumentCommand}" ToolTipService.ToolTip="{DynamicResource Tooltip_Attach}" Margin="8,0,0,0" />
            <Button Content="{DynamicResource Label_ExecuteNow}"
                    Command="{Binding ExecuteJobCommand}"
                    Margin="8,0,0,0" />
            <Button Content="{DynamicResource Label_Acknowledge}"
                    Command="{Binding AcknowledgeJobCommand}"
                    Margin="8,0,0,0" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}" ToolTipService.ToolTip="{DynamicResource Tooltip_GoldenArrow}" Margin="8,0,0,0" AutomationProperties.AutomationId="GoldenArrowButton" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Search}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0"
                          Margin="0,0,12,0"
                          ItemsSource="{Binding RecordsView}"
                          SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Column_Name}" Binding="{Binding Title}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource Column_Status}" Binding="{Binding Status}" Width="120" />
                        <DataGridTextColumn Header="{DynamicResource Column_Recurrence}" Binding="{Binding InspectorFields[1].Value}" Width="*" />
                        <DataGridTextColumn Header="{DynamicResource Column_NextDue}" Binding="{Binding InspectorFields[0].Value}" Width="*" />
                </DataGrid.Columns>
                <DataGrid.ToolTip>
                    <ToolTip Content="{DynamicResource Tooltip_RecordsGrid}" />
                </DataGrid.ToolTip>
            </DataGrid>

                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource Label_ScheduledJobDetails}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Label_Name}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource Label_Status}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Status, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Label_JobType}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.JobType, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource Label_Recurrence}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.RecurrencePattern, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Label_CronExpression}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.CronExpression, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource Label_NextDue}" Margin="8,0,0,4" />
                            <DatePicker Grid.Row="2" Grid.Column="1" Margin="8,0,0,12"
                                        SelectedDate="{Binding Editor.NextDue, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Label_EntityType}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.EntityType, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource Label_EntityId}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.EntityId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource Label_Comment}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     Text="{Binding Editor.Comment, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="5" Grid.Column="0" Margin="0,0,8,12"
                                      Content="{DynamicResource Label_IsCritical}"
                                      IsChecked="{Binding Editor.IsCritical}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="5" Grid.Column="1" Margin="8,0,0,12"
                                      Content="{DynamicResource Label_RequiresAck}"
                                      IsChecked="{Binding Editor.NeedsAcknowledgment}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="6" Grid.Column="0" Margin="0,0,8,12"
                                      Content="{DynamicResource Label_AlertOnFailure}"
                                      IsChecked="{Binding Editor.AlertOnFailure}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{DynamicResource Label_EscalationNote}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="6" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.EscalationNote, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="{DynamicResource Label_LastResult}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="7" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.LastResult, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{DynamicResource Label_LastError}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="7" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.LastError, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="{DynamicResource Label_LastExecuted}" Margin="0,0,8,4" />
                            <DatePicker Grid.Row="8" Grid.Column="0" Margin="0,0,8,12"
                                        SelectedDate="{Binding Editor.LastExecuted, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{DynamicResource Label_Retries}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="8" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Retries, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="{DynamicResource Label_MaxRetries}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="9" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.MaxRetries, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="9" Grid.Column="1" Text="{DynamicResource Label_ExtraParams}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="9" Grid.Column="1" Margin="8,0,0,12"
                                     TextWrapping="Wrap"
                                     Text="{Binding Editor.ExtraParams, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="{DynamicResource Label_Device}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="10" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.DeviceInfo, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="10" Grid.Column="1" Text="{DynamicResource Label_Session}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="10" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.SessionId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="{DynamicResource Label_IpAddress}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="11" Grid.Column="0" Margin="0,0,8,0"
                                     Text="{Binding Editor.IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <ItemsControl Margin="0,12,0,0"
                                      ItemsSource="{Binding ValidationMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="•  {Binding}" Foreground="Tomato" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,8,0,0" />
        </Grid>
    </DockPanel>
</UserControl>



