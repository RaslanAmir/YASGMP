<UserControl x:Class="YasGMP.Wpf.Views.SchedulingModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="960">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}" Command="{Binding ShowCflCommand}" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}"/>
            <Button Content="{DynamicResource Module.Toolbar.Button.Attach.Content}" Command="{Binding AttachDocumentCommand}" Margin="8,0,0,0" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Attach.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Attach.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Attach.AutomationId}"/>
            <Button Content="{DynamicResource Module.Scheduling.Content.ExecuteNow}"
                    Command="{Binding ExecuteJobCommand}"
                    Margin="8,0,0,0" 
                   ToolTipService.ToolTip="{DynamicResource Module.Scheduling.ToolTip.ExecuteNow}"
                   AutomationProperties.Name="{DynamicResource Module.Scheduling.AutomationName.ExecuteNow}"
                   AutomationProperties.AutomationId="{DynamicResource Module.Scheduling.Button.ExecuteNow.AutomationId}"/>
            <Button Content="{DynamicResource Module.Scheduling.Content.Acknowledge}"
                    Command="{Binding AcknowledgeJobCommand}"
                    Margin="8,0,0,0" 
                   ToolTipService.ToolTip="{DynamicResource Module.Scheduling.ToolTip.Acknowledge}"
                   AutomationProperties.Name="{DynamicResource Module.Scheduling.AutomationName.Acknowledge}"
                   AutomationProperties.AutomationId="{DynamicResource Module.Scheduling.Button.Acknowledge.AutomationId}"/>
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0"
                          Margin="0,0,12,0"
                          ItemsSource="{Binding RecordsView}"
                          SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Module.Assets.Text.Name}" Binding="{Binding Title}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}" Binding="{Binding Status}" Width="120" />
                        <DataGridTextColumn Header="{DynamicResource Module.Scheduling.Header.Recurrence}" Binding="{Binding InspectorFields[1].Value}" Width="*" />
                        <DataGridTextColumn Header="{DynamicResource Module.Calibration.Text.NextDue}" Binding="{Binding InspectorFields[0].Value}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource Module.Scheduling.Text.ScheduledJobDetails}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Module.Assets.Text.Name}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource Dashboard.Grid.Column.Status.Header}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Status, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.JobType}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.JobType, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Header.Recurrence}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.RecurrencePattern, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.CronExpression}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.CronExpression, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource Module.Calibration.Text.NextDue}" Margin="8,0,0,4" />
                            <DatePicker Grid.Row="2" Grid.Column="1" Margin="8,0,0,12"
                                        SelectedDate="{Binding Editor.NextDue, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.EntityType}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.EntityType, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.EntityId}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.EntityId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource Module.ExternalServicers.Text.Comment}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     Text="{Binding Editor.Comment, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="5" Grid.Column="0" Margin="0,0,8,12"
                                      Content="{DynamicResource Module.Scheduling.Content.IsCritical}"
                                      IsChecked="{Binding Editor.IsCritical}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="5" Grid.Column="1" Margin="8,0,0,12"
                                      Content="{DynamicResource Module.Scheduling.Content.RequiresAcknowledgment}"
                                      IsChecked="{Binding Editor.NeedsAcknowledgment}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <CheckBox Grid.Row="6" Grid.Column="0" Margin="0,0,8,12"
                                      Content="{DynamicResource Module.Scheduling.Content.AlertOnFailure}"
                                      IsChecked="{Binding Editor.AlertOnFailure}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.EscalationNote}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="6" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.EscalationNote, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.LastResult}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="7" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.LastResult, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.LastError}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="7" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.LastError, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.LastExecuted}" Margin="0,0,8,4" />
                            <DatePicker Grid.Row="8" Grid.Column="0" Margin="0,0,8,12"
                                        SelectedDate="{Binding Editor.LastExecuted, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.Retries}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="8" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Retries, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="{DynamicResource Module.Scheduling.Text.MaxRetries}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="9" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.MaxRetries, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="9" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.ExtraParams}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="9" Grid.Column="1" Margin="8,0,0,12"
                                     TextWrapping="Wrap"
                                     Text="{Binding Editor.ExtraParams, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="{DynamicResource Module.Audit.Header.Device}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="10" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.DeviceInfo, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="10" Grid.Column="1" Text="{DynamicResource Module.Scheduling.Text.Session}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="10" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.SessionId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="{DynamicResource Module.ApiAudit.Header.IPAddress}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="11" Grid.Column="0" Margin="0,0,8,0"
                                     Text="{Binding Editor.IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <ItemsControl Margin="0,12,0,0"
                                      ItemsSource="{Binding ValidationMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{DynamicResource Module.Scheduling.Text.Binding}" Foreground="Tomato" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,8,0,0" />
        </Grid>
    </DockPanel>
</UserControl>
