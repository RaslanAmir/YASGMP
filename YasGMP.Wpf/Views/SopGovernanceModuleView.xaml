<UserControl x:Class="YasGMP.Wpf.Views.SopGovernanceModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}"
                    Command="{Binding ShowCflCommand}"
                    ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}" />
            <controls:GoldenArrowButton Command="{Binding GoldenArrowCommand}"
                                       Margin="8,0,0,0"
                                       ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                                       AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                                       AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
            <Separator />
            <Button Content="{DynamicResource Module.SopGovernance.Toolbar.Create.Content}"
                    Command="{Binding CreateCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.SopGovernance.Toolbar.Create.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.SopGovernance.Toolbar.Create.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.SopGovernance.Toolbar.Create.AutomationId}" />
            <Button Content="{DynamicResource Module.SopGovernance.Toolbar.Update.Content}"
                    Command="{Binding UpdateCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.SopGovernance.Toolbar.Update.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.SopGovernance.Toolbar.Update.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.SopGovernance.Toolbar.Update.AutomationId}" />
            <Button Content="{DynamicResource Module.SopGovernance.Toolbar.Delete.Content}"
                    Command="{Binding DeleteCommand}"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="{DynamicResource Module.SopGovernance.Toolbar.Delete.ToolTip}"
                    AutomationProperties.Name="{DynamicResource Module.SopGovernance.Toolbar.Delete.AutomationName}"
                    AutomationProperties.AutomationId="{DynamicResource Module.SopGovernance.Toolbar.Delete.AutomationId}" />
        </ToolBar>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTipService.ToolTip="{DynamicResource Dashboard.Search.Label}"
                         AutomationProperties.Name="{DynamicResource Dashboard.Search.Label}"
                         AutomationProperties.AutomationId="{DynamicResource Module.SopGovernance.Search.AutomationId}" />
            </DockPanel>

            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.SopGovernance.Filter.Status}" />
                    <ComboBox Width="180"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding StatusFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.SopGovernance.Filter.Process}" />
                    <ComboBox Width="180"
                              ItemsSource="{Binding ProcessOptions}"
                              SelectedItem="{Binding ProcessFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.SopGovernance.Filter.IssuedFrom}" />
                    <DatePicker SelectedDate="{Binding IssuedFrom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Module.SopGovernance.Filter.IssuedTo}" />
                    <DatePicker SelectedDate="{Binding IssuedTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <CheckBox Content="{DynamicResource Module.SopGovernance.Filter.ActiveOnly}"
                          VerticalAlignment="Bottom"
                          IsChecked="{Binding IncludeOnlyActive, Mode=TwoWay}" />
            </StackPanel>

            <DataGrid Grid.Row="2"
                      Grid.Column="0"
                      ItemsSource="{Binding RecordsView}"
                      SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Code.Header}"
                                        Binding="{Binding Code}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Title.Header}"
                                        Binding="{Binding Title}"
                                        Width="2*" />
                    <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}"
                                        Binding="{Binding Status}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Module.SopGovernance.Grid.Column.Process}"
                                        Binding="{Binding InspectorFields[0].Value}"
                                        Width="160" />
                    <DataGridTextColumn Header="{DynamicResource Module.SopGovernance.Grid.Column.Issued}"
                                        Binding="{Binding InspectorFields[1].Value}"
                                        Width="140" />
                    <DataGridTextColumn Header="{DynamicResource Module.SopGovernance.Grid.Column.Expiry}"
                                        Binding="{Binding InspectorFields[2].Value}"
                                        Width="140" />
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="2"
                    Grid.Column="1"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Module.SopGovernance.Details.Header}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Dashboard.Grid.Column.Code.Header}" />
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Editor.Code, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Dashboard.Grid.Column.Title.Header}" />
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding Editor.Name, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Dashboard.Grid.Column.Status.Header}" />
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding Editor.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Module.SopGovernance.Text.Process}" />
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      ItemsSource="{Binding ProcessOptions}"
                                      SelectedItem="{Binding Editor.Process, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Module.SopGovernance.Text.Owner}" />
                            <TextBox Grid.Row="4" Grid.Column="1"
                                     Text="{Binding Editor.Owner, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Module.SopGovernance.Text.Issued}" />
                            <DatePicker Grid.Row="5" Grid.Column="1"
                                        SelectedDate="{Binding Editor.DateIssued, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Module.SopGovernance.Text.Expiry}" />
                            <DatePicker Grid.Row="6" Grid.Column="1"
                                        SelectedDate="{Binding Editor.DateExpiry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,0,8,6"
                                       Text="{DynamicResource Module.SopGovernance.Text.Version}" />
                            <TextBox Grid.Row="7" Grid.Column="1"
                                     Text="{Binding Editor.Version, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <TextBlock Text="{DynamicResource Dashboard.Grid.Column.Description.Header}"
                                   Margin="0,12,0,6" />
                        <TextBox Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="100"
                                 IsEnabled="{Binding IsEditorEnabled}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <ItemsControl Grid.Row="3"
                          Grid.ColumnSpan="2"
                          ItemsSource="{Binding ValidationMessages}"
                          Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="0,12,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"
                                BorderBrush="{DynamicResource {x:Static SystemColors.InfoTextBrushKey}}"
                                BorderThickness="1"
                                Margin="0,0,0,4">
                            <TextBlock Text="{Binding}" Margin="8,4" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </DockPanel>
</UserControl>
