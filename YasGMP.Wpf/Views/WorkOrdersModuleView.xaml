<UserControl x:Class="YasGMP.Wpf.Views.WorkOrdersModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:YasGMP.Wpf.Controls"
             xmlns:shared="clr-namespace:YasGMP.Wpf.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/YasGMP.Wpf;component/Resources/ModuleToolbarResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding Toolbar}"
                          ItemTemplate="{StaticResource ModuleToolbarToggleButtonTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Separator />
            <Button Content="{DynamicResource Module.Toolbar.Button.Cfl.Content}" Command="{Binding ShowCflCommand}" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Cfl.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Cfl.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Cfl.AutomationId}"/>
            <Button Content="{DynamicResource Module.Toolbar.Button.Attach.Content}" Command="{Binding AttachDocumentCommand}" Margin="8,0,0,0" ToolTipService.ToolTip="{DynamicResource Module.Toolbar.Button.Attach.ToolTip}" AutomationProperties.Name="{DynamicResource Module.Toolbar.Button.Attach.AutomationName}" AutomationProperties.AutomationId="{DynamicResource Module.Toolbar.Button.Attach.AutomationId}"/>
            <controls:GoldenArrowButton
                Command="{Binding GoldenArrowCommand}"
                Margin="8,0,0,0"
                ToolTipKey="Module.Toolbar.Button.GoldenArrow.ToolTip"
                AutomationNameKey="Module.Toolbar.Button.GoldenArrow.AutomationName"
                AutomationIdKey="Module.Toolbar.Button.GoldenArrow.AutomationId" />
        </ToolBar>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Dashboard.Search.Label}" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0"
                          Margin="0,0,12,0"
                          ItemsSource="{Binding RecordsView}"
                          SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Code.Header}" Binding="{Binding Code}" Width="120" />
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Title.Header}" Binding="{Binding Title}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Status.Header}" Binding="{Binding Status}" Width="140" />
                        <DataGridTextColumn Header="{DynamicResource Dashboard.Grid.Column.Description.Header}" Binding="{Binding Description}" Width="2*" />
                    </DataGrid.Columns>
                </DataGrid>
                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{DynamicResource Module.WorkOrders.Text.WorkOrderDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Dashboard.Grid.Column.Title.Header}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.Title, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource Dashboard.Grid.Column.Status.Header}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Status, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Module.Components.Text.Type}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.Type, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource Module.Capa.Header.Priority}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.Priority, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Module.WorkOrders.Text.MachineId}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.MachineId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource Module.WorkOrders.Text.ComponentId}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.ComponentId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Module.ChangeControl.Text.RequestedBy}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.RequestedById, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource Module.Capa.Text.AssignedTo}" Margin="8,0,0,4" />
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,12"
                                     Text="{Binding Editor.AssignedToId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource Module.WorkOrders.Text.CreatedBy}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="4" Grid.Column="0" Margin="0,0,8,12"
                                     Text="{Binding Editor.CreatedById, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{DynamicResource Module.WorkOrders.Text.DateOpen}" Margin="8,0,0,4" />
                            <DatePicker Grid.Row="4" Grid.Column="1" Margin="8,0,0,12"
                                        SelectedDate="{Binding Editor.DateOpen, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="{DynamicResource Module.WorkOrders.Text.DueDate}" Margin="0,0,8,4" />
                            <DatePicker Grid.Row="5" Grid.Column="0" Margin="0,0,8,12"
                                        SelectedDate="{Binding Editor.DueDate, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{DynamicResource Module.WorkOrders.Text.DateClosed}" Margin="8,0,0,4" />
                            <DatePicker Grid.Row="5" Grid.Column="1" Margin="8,0,0,12"
                                        SelectedDate="{Binding Editor.DateClose, Mode=TwoWay}"
                                        IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="{DynamicResource Module.Calibration.Text.Result}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     Text="{Binding Editor.Result, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="{DynamicResource Module.WorkOrders.Text.TaskDescription}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     Text="{Binding Editor.TaskDescription, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="{DynamicResource Dashboard.Grid.Column.Description.Header}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"
                                     Text="{Binding Editor.Description, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="{DynamicResource Module.Assets.Text.Notes}" Margin="0,0,8,4" />
                            <TextBox Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"
                                     Text="{Binding Editor.Notes, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsEditorEnabled}" />
                        </Grid>

                        <shared:SignatureMetadataView DataContext="{Binding Editor}" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,8,0,0" />
        </Grid>
    </DockPanel>
</UserControl>
